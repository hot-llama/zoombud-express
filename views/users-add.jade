extends layout_admin

block content
  h1= title
  a(href="/admin/users/") << Back to Users
  p
  div(id="output")
  
  div
    label Email
    input(
        type='text'
        name='email'
        id='email'
        value=''
        maxlength='100'
    )
  div
    label Password
    input(
        type='password'
        name='password'
        id='password'
        value=''
        maxlength='100'
    )
  div
    label Is Admin?
    input(
        type='checkbox'
        name='is_admin'
        id='is_admin'
        value='1'
    )
    
  div
    input(type='submit', id='userSubmit' value='Save')
